<Window x:Class="PeerCastStation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:PeerCastStation.WPF"
        xmlns:lc="clr-namespace:PeerCastStation.WPF.CoreSettings"
        Title="PeerCastStation" Height="600" Width="460">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="10,2"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding PortStatus}"/>
        </StatusBar>
        <TabControl>
            <TabItem Header="設定">
                <lc:Setting x:Name="Setting" DataContext="{Binding Setting}"/>
            </TabItem>
            <TabItem Header="ログ">
                <Grid>
                    <l:Log DataContext="{Binding Log}"/>
                    <Button Name="VersionInfoButton"
                            HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            Margin="3" Width="100" Height="23"
                            Content="バージョン情報..."/>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
