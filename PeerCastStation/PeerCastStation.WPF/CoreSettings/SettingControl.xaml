<UserControl x:Class="PeerCastStation.WPF.CoreSettings.SettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:PeerCastStation.WPF.CoreSettings"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="400">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="Width" Value="140"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="24"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="6"/>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <GroupBox Header="ポート">
            <StackPanel>
                <l:ListControl x:Name="Ports" DataContext="{Binding Ports}"/>
                <l:RelaySettingControl IsEnabled="{Binding IsPortSelected}"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="その他">
            <StackPanel DataContext="{Binding OtherSetting}">
                <StackPanel Orientation="Horizontal">
                    <Label Content="最大リレー数:"/>
                    <Label Width="Auto" Content="合計:"/>
                    <TextBox Text="{Binding MaxRelays, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Width="Auto" Content="チャンネル数:"/>
                    <TextBox Text="{Binding MaxRelaysPerChannel, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="視聴数:"/>
                    <Label Width="Auto" Content="合計:"/>
                    <TextBox Text="{Binding MaxDirects, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Width="Auto" Content="チャンネル数:"/>
                    <TextBox Text="{Binding MaxDirectsPerChannel, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="最大上り帯域(kbps):"/>
                    <TextBox Text="{Binding MaxUpstreamRate, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <Button HorizontalAlignment="Right" Content="適用"
                        Command="{Binding ApplyOthers}"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="YP一覧">
            <l:ListControl x:Name="YellowPagesList" DataContext="{Binding YellowPagesList}"/>
        </GroupBox>
        <GroupBox Header="UI設定" DataContext="{Binding OtherSetting}">
            <CheckBox Content="起動時にウィンドウを表示する" IsChecked="{Binding IsShowWindowOnStartup}"/>
        </GroupBox>
    </StackPanel>
</UserControl>
