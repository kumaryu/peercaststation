<UserControl x:Class="PeerCastStation.WPF.CoreSettings.SettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:PeerCastStation.WPF.CoreSettings"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="400">
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel>
      <GroupBox Header="ポート">
        <StackPanel>
          <l:ListControl x:Name="Ports" DataContext="{Binding Ports}"/>
          <l:RelaySettingControl IsEnabled="{Binding IsPortSelected}"/>
        </StackPanel>
      </GroupBox>
      <GroupBox Header="その他">
        <Grid DataContext="{Binding OtherSetting}">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>
          <Label    Grid.Column="0" Grid.Row="0" Content="最大リレー数:"/>
          <Label    Grid.Column="1" Grid.Row="0" Content="合計:"/>
          <TextBox  Grid.Column="2" Grid.Row="0" Text="{Binding MaxRelays, UpdateSourceTrigger=PropertyChanged}"/>
          <Label    Grid.Column="3" Grid.Row="0" Content="チャンネル毎:"/>
          <TextBox  Grid.Column="4" Grid.Row="0" Text="{Binding MaxRelaysPerChannel, UpdateSourceTrigger=PropertyChanged}"/>
          <Label    Grid.Column="0" Grid.Row="1" Content="視聴数:"/>
          <Label    Grid.Column="1" Grid.Row="1" Content="合計:"/>
          <TextBox  Grid.Column="2" Grid.Row="1" Text="{Binding MaxDirects, UpdateSourceTrigger=PropertyChanged}"/>
          <Label    Grid.Column="3" Grid.Row="1" Content="チャンネル毎:"/>
          <TextBox  Grid.Column="4" Grid.Row="1" Text="{Binding MaxDirectsPerChannel, UpdateSourceTrigger=PropertyChanged}"/>
          <Label    Grid.Column="0" Grid.Row="2" Content="最大上り帯域(kbps):"/>
          <TextBox  Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" Text="{Binding MaxUpstreamRate, UpdateSourceTrigger=PropertyChanged}"/>
          <Label    Grid.Column="0" Grid.Row="3" Content="自動切断するチャンネル:"/>
          <ComboBox Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" ItemsSource="{Binding ChannelCleanupModeItems}" DisplayMemberPath="Name" SelectedValuePath="Mode" IsEditable="False" SelectedValue="{Binding ChannelCleanupMode}"/>
          <Label    Grid.Column="0" Grid.Row="4" Content="チャンネル自動切断までの時間(分):"/>
          <TextBox  Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="4" Text="{Binding ChannelCleanupInactiveLimit}"/>
        </Grid>
      </GroupBox>
      <GroupBox Header="YP一覧">
        <l:ListControl x:Name="YellowPagesList" DataContext="{Binding YellowPagesList}"/>
      </GroupBox>
      <GroupBox Header="UI設定" DataContext="{Binding OtherSetting}">
        <CheckBox Content="起動時にウィンドウを表示する" IsChecked="{Binding IsShowWindowOnStartup}"/>
      </GroupBox>
    </StackPanel>
  </ScrollViewer>
</UserControl>
